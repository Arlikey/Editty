<models:BaseWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editty.Views"
        xmlns:models="clr-namespace:Editty.Models"
        xmlns:controls="clr-namespace:Editty.UserControls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Editty.Views.EditorWindow"
        mc:Ignorable="d"
        Width="800" Height="600">
    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding OpenFileCommand}" CommandParameter="{Binding ElementName=textBox}"></KeyBinding>
    </Window.InputBindings>
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0 20 0 3"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать файл" />
                <MenuItem Header="Открыть файл" InputGestureText="Ctrl+O" Command="{Binding OpenFileCommand}" CommandParameter="{Binding ElementName=textBox}"/>
                <Separator/>
                <MenuItem Header="Сохранить файл" >
                    <MenuItem Header="Сохранить..."/>
                    <MenuItem Header="Сохранить как"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        <ToolBarTray Grid.Row="1" IsLocked="True">
            <ToolBar>
                <Button>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../images/icons/text.png" Width="20"/>
                        <TextBlock Margin="10 0 0 0"><Run Text="Текст"/></TextBlock>
                    </StackPanel>
                </Button>
                <Separator/>
                <Button>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../images/icons/image.png" Width="20"/>
                        <TextBlock Margin="10 0 0 0"><Run Text="Медиа"/></TextBlock>
                    </StackPanel>
                </Button>
                <Separator/>
                <Button>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../images/icons/list.png" Width="20"/>
                        <TextBlock Margin="10 0 0 0"><Run Text="Списки"/></TextBlock>
                    </StackPanel>
                </Button>
            </ToolBar>
        </ToolBarTray>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <controls:TextFormattingControl x:Name="textFormattingControl" Background="#f1f1f1"
                                            MouseEnter="TextFormattingControl_MouseEnter"
                                            MouseLeave="TextFormattingControl_MouseLeave"></controls:TextFormattingControl>
            <RichTextBox x:Name="textBox" Grid.Column="1" VerticalScrollBarVisibility="Visible" Background="#FFFFFF" Padding="10"
                         DataContextChanged="textBox_DataContextChanged"
                         GotFocus="textBox_GotFocus"
                         LostFocus="textBox_LostFocus"/>
            <controls:LoadingControl x:Name="progressBar" Grid.Column="1" Visibility="Hidden"/>
        </Grid>
    </Grid>
</models:BaseWindow>

<models:BaseWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editty.Views"
        xmlns:models="clr-namespace:Editty.Models"
        xmlns:controls="clr-namespace:Editty.UserControls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Editty.Views.EditorWindow"
        mc:Ignorable="d"
        >
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0 20 0 3"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать файл" />
                <MenuItem Header="Открыть файл" />
                <Separator/>
                <MenuItem Header="Сохранить файл" >
                    <MenuItem Header="Сохранить..."/>
                    <MenuItem Header="Сохранить как"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        <ToolBar Grid.Row="1">
            <Button>
                <StackPanel Orientation="Horizontal">
                    <Image Source="../images/icons/text.png" Width="20"/>
                    <TextBlock Margin="10 0 0 0"><Run Text="Текст"/></TextBlock>
                </StackPanel>
            </Button>
            <Button>
                <StackPanel Orientation="Horizontal">
                    <Image Source="../images/icons/image.png" Width="20"/>
                    <TextBlock Margin="10 0 0 0"><Run Text="Медиа"/></TextBlock>
                </StackPanel>
            </Button>
            <Button>
                <StackPanel Orientation="Horizontal">
                    <Image Source="../images/icons/list.png" Width="20"/>
                    <TextBlock Margin="10 0 0 0"><Run Text="Списки"/></TextBlock>
                </StackPanel>
            </Button>
        </ToolBar>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <controls:TextFormattingControl></controls:TextFormattingControl>
            <RichTextBox Grid.Column="1" Margin="10" VerticalScrollBarVisibility="Visible" BorderBrush="Transparent" Background="#FFFFFF"/>
        </Grid>
    </Grid>
</models:BaseWindow>
